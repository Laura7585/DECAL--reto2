<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Piel"
    android:backgroundTint="@color/Piel"
    android:backgroundTintMode="screen"
    tools:context=".fragment_inicio">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/fanwood_text"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:gravity="center|center_vertical"
                android:text="Decal Jacket Shop"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#D50000" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/logo1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                tools:ignore="ImageContrastCheck"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/fanwood_text"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:gravity="center|center_vertical"
                android:text="¿Quiénes somos?"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/Rojo" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:fontFamily="@font/fanwood_text"
                    android:foregroundGravity="center_vertical|center_horizontal"
                    android:gravity="center|center_vertical"
                    android:text="Somos una iniciativa empresarial impulsada por el gobierno Nacional a través de su Proyecto Tecnológico Misión TIC 2021 con el apoyo de la Universidad Sergio Arboleda."
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/fanwood_text"
                    android:foregroundGravity="center_vertical|center_horizontal"
                    android:gravity="center|center_vertical"
                    android:text="Estamos orientados a la comercialización de chaquetas en cuero y cuero sintético para damas, caballeros y niños, en todo el territorio nacional y con una proyección a nivel internacional al mediano plazo."
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>